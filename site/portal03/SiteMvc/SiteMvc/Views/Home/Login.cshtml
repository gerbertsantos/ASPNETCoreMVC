
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="/home/login">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" value="" name="email" id="email" placeholder="Digite seu email">
        @Html.ValidationMessage("email")
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" class="form-control" value="" name="senha" id="senha" placeholder="Digite sua senha">
        @Html.ValidationMessage("senha")
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
@ViewBag.Message
